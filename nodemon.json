{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "watch": [
    "public/",
    "routes/",
    "services/",
    "tests/",
    "views/"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js, json, scss, pug"
}
